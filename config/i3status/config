general {
    colors   = true
    interval = 5

    color_good     = "#6ba304"
    color_degraded = "#f3bc65"
    color_bad      = "#5c0706"
}

order += "wireless wlan0"
order += "volume master"
order += "tztime local"

wireless wlan0 {
    format_up = "直 %essid"
    format_down = "睊"
}

tztime local {
    format = "%a, %d de %b. %Hh%M  "
}

volume master {
    format = "墳 %volume"
    format_muted = "ﱝ"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}
